<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="407dp"
            android:layout_height="549dp"
            android:padding="8dp">


            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="377dp"
                android:layout_height="137dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="450dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="Título"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtTitulo2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="425dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="TITLE"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIssue"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="196dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="Issue"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtIssue2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="167dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="ISSUE"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVolume"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtIssue2"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="250dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="Volume"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtVolume2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtIssue2"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="225dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="VOLUME"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNumber"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtVolume2"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="300dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="Number"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtNumber2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtVolume2"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="275dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="NUMBER"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtYear"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="350dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="Año"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtYear2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="325dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="YEAR"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDOI"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgAvatar"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="355dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:background="@color/cardview_light_background"
                android:foregroundTint="#040404"
                android:text="doi"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtDOI2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgAvatar"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="330dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:background="@color/cardview_light_background"
                android:foregroundTint="#040404"
                android:text="DOI"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="#000000"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/txtFP"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="400dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="Fecha de publicación"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/txtFP2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-378dp"
                android:layout_marginTop="375dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:text="DATE PUBLISHED"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>